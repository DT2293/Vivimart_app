@using WebApplication1.ViewModels
@model OrderRequestViewModel
<h1>Yêu cầu nhập hàng</h1>
<form asp-action="SendOrderRequest" method="post">

    <div class="form-group">
        <label for="supplierId">Supplier ID</label>
        <input type="text" asp-for="@Model.SupplierId" class="form-control" readonly />
        <span asp-validation-for="@Model.SupplierId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="name">Supplier Name</label>
        <input type="text" asp-for="SupplierName" class="form-control" readonly />
        <span asp-validation-for="SupplierName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label for="Message">Message</label>
        <textarea asp-for="Message" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send Order Request</button>
</form>
