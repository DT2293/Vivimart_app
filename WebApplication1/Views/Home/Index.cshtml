<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Welcome, @ViewBag.Username!</h2>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @ViewBag.Email</p>
                    <p><strong>Role:</strong> @ViewBag.RoleName</p>
                    <p><strong>Access Type:</strong> @ViewBag.AccessType</p>

                    <div class="d-grid gap-2 d-md-block">
                        <a class="btn btn-outline-primary me-2" asp-area="" asp-controller="Home" asp-action="CreateUser">Thêm tài khoản</a>
                        <a class="btn btn-outline-success me-2" asp-area="" asp-controller="Home" asp-action="ShowAllEmp">Danh Sách Nhân Viên</a>
                        <a class="btn btn-outline-warning me-2" asp-area="" asp-controller="ProductCategory" asp-action="Index">Danh mục Sản phẩm</a>
                        <a class="btn btn-outline-success me-2" asp-area="" asp-controller="Product" asp-action="Index">Sản phẩm</a>
                        <a class="btn btn-outline-success me-2" asp-area="" asp-controller="SaleRecord" asp-action="ShowChart">ShowSalesData</a>
                        <a class="btn btn-outline-danger" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
